<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.main.MainFragment">

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_date_time"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_route_type"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/recycler_view_climb_style"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/button_date_time"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/recyclerview_background"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_climb_style"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toEndOf="@+id/recycler_view_route_type"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/recycler_view_outcome"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_route_type"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/recyclerview_background"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="50dp"
                android:layout_height="250dp"
                android:id="@+id/recycler_view_route_grade"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toEndOf="@+id/recycler_view_outcome"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_outcome"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/recyclerview_background"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_outcome"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toEndOf="@+id/recycler_view_climb_style"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/recycler_view_route_grade"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_climb_style"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/recyclerview_background"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_route_characteristics"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_route_type"
                android:background="@drawable/recyclerview_background"/>

        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier_lists"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="recycler_view_outcome,recycler_view_route_grade,recycler_view_climb_style,recycler_view_route_type,recycler_view_route_characteristics"/>

        <RatingBar
                android:id="@+id/rating_bar_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/barrier_lists"/>

        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_area"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/spinner_sector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>

        <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner_sector"
                app:layout_constraintStart_toEndOf="@+id/spinner_area"
                app:layout_constraintTop_toTopOf="@+id/spinner_area"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_add_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>

        <ImageButton
                android:src="@drawable/ic_add_black"
                android:contentDescription="@string/add_location"
                android:id="@+id/button_add_location"
                app:layout_constraintStart_toEndOf="@+id/spinner_sector"
                app:layout_constraintTop_toTopOf="@+id/spinner_sector"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_sector"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit_location"
                android:id="@+id/button_edit_location"
                app:layout_constraintBottom_toBottomOf="@+id/button_add_location"
                app:layout_constraintTop_toTopOf="@+id/button_add_location"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_route_name"
                app:layout_constraintTop_toBottomOf="@+id/spinner_area"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/route_name"
                    android:ems="10"
                    android:id="@+id/edit_text_route_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_length"
                app:layout_constraintTop_toBottomOf="@+id/til_route_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/length"
                    android:ems="10"
                    android:id="@+id/edit_text_length"/>
        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/button_location"
                app:layout_constraintTop_toBottomOf="@+id/til_length"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_comment"
                app:layout_constraintTop_toBottomOf="@+id/button_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/comment"
                    android:ems="10"
                    android:id="@+id/edit_text_comment"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>