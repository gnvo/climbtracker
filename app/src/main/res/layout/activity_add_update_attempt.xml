<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.main.MainFragment">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_date_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_image_date"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@+id/button_image_date"
                app:layout_constraintBottom_toBottomOf="@+id/button_image_date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"/>

        <ImageButton
                android:src="@drawable/ic_date_range"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_image_date"
                android:contentDescription="@string/change_date"
                app:layout_constraintEnd_toStartOf="@+id/button_image_time"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <ImageButton
                android:src="@drawable/ic_access_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_image_time"
                android:contentDescription="@string/change_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_route_type"
                app:layout_constraintEnd_toEndOf="@+id/recycler_view_route_characteristics"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_image_date"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/recyclerview_background"
                tools:listitem="@layout/recycler_view_item_1"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_climb_style"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_route_type"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/recycler_view_outcome"
                app:layout_constraintStart_toEndOf="@+id/recycler_view_route_type"
                android:layout_marginStart="8dp"
                android:background="@drawable/recyclerview_background"
                tools:listitem="@layout/recycler_view_item_1"
        />
        <android.support.v7.widget.RecyclerView
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:id="@+id/recycler_view_route_grade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_outcome"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_view_route_characteristics"
                android:layout_marginEnd="8dp"
                android:background="@drawable/recyclerview_background"
                tools:listitem="@layout/recycler_view_item_1"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_outcome"
                app:layout_constraintStart_toEndOf="@+id/recycler_view_climb_style"
                app:layout_constraintTop_toTopOf="@+id/recycler_view_climb_style"
                app:layout_constraintEnd_toStartOf="@+id/recycler_view_route_grade"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/recyclerview_background"
                tools:listitem="@layout/recycler_view_item_1"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_route_characteristics"
                tools:listitem="@layout/recycler_view_item_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_route_type"
                android:background="@drawable/recyclerview_background"/>

        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barrier_lists"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="recycler_view_outcome,recycler_view_route_grade,recycler_view_climb_style,recycler_view_route_type,recycler_view_route_characteristics"/>

        <RatingBar
                android:id="@+id/rating_bar_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/barrier_lists"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_try_number"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/try_number"
                    android:id="@+id/edit_text_try_number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_area"
                app:layout_constraintTop_toBottomOf="@+id/til_try_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_sector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/area"
                    android:id="@+id/tiet_area"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/button_sector"
                app:layout_constraintStart_toEndOf="@+id/til_area"
                app:layout_constraintTop_toTopOf="@+id/til_area"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_edit_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/sector"
                    android:id="@+id/tiet_sector"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

        </android.support.design.widget.TextInputLayout>

        <ImageButton
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit_location"
                android:id="@+id/button_edit_location"
                app:layout_constraintStart_toEndOf="@+id/button_sector"
                app:layout_constraintTop_toTopOf="@+id/button_sector"
                app:layout_constraintBottom_toBottomOf="@+id/button_sector"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/button_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:src="@drawable/ic_add_black"
                android:contentDescription="@string/add_location"
                android:id="@+id/button_add_location"
                app:layout_constraintTop_toTopOf="@+id/button_edit_location"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button_edit_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_route_name"
                app:layout_constraintTop_toBottomOf="@+id/til_area"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/route_name"
                    android:id="@+id/edit_text_route_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_length"
                app:layout_constraintTop_toBottomOf="@+id/til_route_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/length"
                    android:id="@+id/edit_text_length"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/til_comment"
                app:layout_constraintTop_toBottomOf="@+id/til_length"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:hint="@string/comment"
                    android:id="@+id/edit_text_comment"
                    android:minLines="1"
                    android:scrollbars="vertical"
                    android:maxLines="6"/>
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>