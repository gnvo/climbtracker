<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_route_grade"
                android:text="Grade"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/text_view_route_type"/>

        <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_climb_style"
                android:text="Climb style"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/text_view_outcome"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/text_view_outcome"/>
        <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_outcome"
                android:text="Outcome"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_route_type"
                android:text="Route type"
                android:maxLines="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@+id/text_view_climb_style"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/text_view_route_grade"
                app:layout_constraintTop_toTopOf="@+id/text_view_climb_style"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_details"
                android:text="Other details"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_route_type"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>